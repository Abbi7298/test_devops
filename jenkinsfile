pipeline{
    agent any
      environment {
    notifyEmail ="abhishak.khajuria@nagarro.com"
  }
    triggers {
    	cron('0 06 * * *')
  	}
    stages{
        stage("Code Checkout"){
            steps{
            bat "echo checkout"
            }
        }
        stage("Code test"){
            steps{
            bat "echo test"
            }
        }
        stage("Code deployed"){
            steps{
            bat "echo deployed"
            }
        }
        stage("Publish to Artifactory"){
            steps{
                rtMavenDeployer(
                    id: 'deployer',
                    serverId: 'abhi_Artifactory',
                    releaseRepo: 'test_devops',
                    snapshotRepo: 'test_devops'
                )
                rtMavenRun(
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: 'deployer'
                    )
                rtPublishBuildInfo(
                    serverId: 'abhi_Artifactory',
                )
            }
    }
    }
    post{
        success{
            bat "echo success"
            }
        
        }
}
